            <li><em class="fa fa-power-off"></em>@Html.ActionLink("Logout", "../Cont/UserRegistration")</li>*@
        </ul>
    </div><!--/.sidebar-->

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        @RenderBody()

    </div>


</body>
</html>
