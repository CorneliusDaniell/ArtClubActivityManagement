            <div class="profile-usertitle">
                <div class="profile-usertitle-name"><h3>Username</h3></div>
                <div class="profile-usertitle-status"><span class="indicator label-success"></span>Online</div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="divider"></div>


        <ul class="nav menu">
            <li><em class="fas fa-home"></em>@Html.ActionLink("Admin Home", "../Admin/Index")</li>
